<UserControl x:Class="DropDownMenu.UserControlProviders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DropDownMenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="datagrid" HorizontalAlignment="Left" Height="358" Margin="111,51,0,0" VerticalAlignment="Top" Width="594" Loaded="datagrid_Loaded" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding Path=ID}" Width="45" />
                <DataGridTextColumn Header="Действие" Binding="{Binding Path=Action}" Width="300" />
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date}" Width="100" />
                <DataGridTextColumn Header="Время" Binding="{Binding Path=Time}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
